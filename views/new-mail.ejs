<html>
  <title>Home</title>
  <head>
    <script>
      const pages =['home', 'profile'];
      function categorySelect(sel)
      {
        document.getElementById("categoryId").value=sel.value;
      }
      </script>
</head>
<body>
  <h2 class="new-mail-title">New Mail</h2></br>
  <form method="post" action="/cloud" enctype="multipart/form-data" style="max-width: 480px; margin: auto">
    
    <label for="Title">Title:</label>
    <input type="text" id="title" name="title" placeholder="Title"><br>
    <label for="date">Date:</label><br>
    <input type="text" id="date" name="date" placeholder="Date"><br>
    
    Categories:
    <select name="category" onChange = "categorySelect(this)">
      <% categories.forEach(element => {%>
        <div class="drop-list"></div><option value="<%=element.id%>"><%=element.categoryName%></option></div>
        <%})%>
      </select><br><br>
    <input type="file" name="myFile"/><br>
    <input type="submit"/><br>
  </form>
</body>
