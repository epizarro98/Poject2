<h2 class="login-signup">Login</h2>

  <form method="POST" action="/auth/login" style="max-width: 480px; margin: auto">
    <label for="auth-email">Email</label>
    <input
      type="email"
      id="auth-email"
      placeholder="Enter Email"
      name="email"
    />

    <label for="auth-password">Password</label>
    <input
      type="password"
      id="auth-password"
      placeholder="Enter Password"
      name="password"
    />

    <input type="submit" value="Log in" />
  </form>
</form>
